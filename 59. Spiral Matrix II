public int[][] generateMatrix(int n) {
        if(n < 0) return null;
        int[][] rst = new int[n][n];
        int num = 1;
        int count = 0;
        while(count*2 < n){
            for(int i = count; i < n-count; i++){
                rst[count][i] = num++;
            }
            
            //down
            for(int i = count+1; i < n-count; i++){
                rst[i][n-1-count] = num++;
            }
            
            if(n - count*2 == 1) return rst;
            
            //left
            for(int i = n-2-count; i >= count; i--){
                rst[n-1-count][i] = num++;
            }
            
            for(int i = n-2-count; i > count; i--){
                rst[i][count] = num++;
            }
            
            count++;
        }
        
        return rst;
    }
