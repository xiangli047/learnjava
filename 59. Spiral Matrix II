public int[][] generateMatrix(int n) {
        if(n < 0) return null;
        
        int yStart = 0, xStart = 0, num = 1;
        int[][] rst = new int[n][n];
        while(n > 0){
            if(n == 1){
                rst[yStart][xStart] = num;
            }
            
            //move right
            for(int i = 0; i<n-1;i++){
                rst[yStart][xStart+i] = num++;
            }
            
            //move down
            for(int i = 0; i<n-1;i++){
                rst[yStart+i][xStart+n-1] = num++;
            }
            
            //move left
            for(int i = 0; i<n-1;i++){
                rst[yStart+n-1][xStart+n-1-i] = num++;
            }
            
            //move right
            for(int i = 0; i<n-1;i++){
                rst[yStart+n-1-i][xStart] = num++;
            }
            
            yStart++;
            xStart++;
            n -= 2;
            
        }
        
        return rst;
    }
